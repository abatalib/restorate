<nav aria-label="Page navigation example" class="my-3">
    <ul class="pagination justify-content-center">

        {# bouton previous#}
        {% if page<1 %}
            <li class="page-item disabled">
                <a class="page-link" href="" tabindex="-1" aria-disabled="true"><</a>
            </li>
        {% else %}
            <li class="page-item">
                <a class="page-link" href="{{ path('home_page', {'page': page}) }}" tabindex="-1" aria-disabled="true"><</a>
            </li>
        {% endif %}
        {# bouton previous #}



        {# boutons des pages#}
        {% for i in range(1, totalPages) %}
            <li>
                <a class="page-link {{ ((page+1)==i) ? 'bg-primary text-white' : '' }}"
                   href="{{ path('home_page', {'page': i}) }}">{{ i }}
                </a>
            </li>
        {% endfor %}
        {# boutons des pages#}



        {# bouton next#}
        {% if page+1 < totalPages %}
            <li class="page-item">
                <a class="page-link" href="{{ path('home_page', {'page': page + 2}) }}">></a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a class="page-link" href="">></a>
            </li>
        {% endif %}
        {# bouton next#}

    </ul>
</nav>